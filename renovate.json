{
  "extends": ["github>dev-hato/renovate-config"],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "ignoreDeps": ["go", "node-fetch", "eslint"],
  "packageRules": [
    {
      "groupName": "artifact",
      "matchPackageNames": [
        "actions/download-artifact",
        "actions/upload-artifact"
      ]
    }
  ]
}
