{
  "extends": [
    "github>dev-hato/renovate-config"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "ignoreDeps": [
    "go"
  ],
  "packageRules": [
    {
      "matchPackageNames": "node-fetch",
      "allowedVersions": "!/2.6.13$/"
    }
  ],
  "constraints": {
    "go": "1.20"
  }
}
