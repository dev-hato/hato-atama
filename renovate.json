{
  "extends": [
    "github>dev-hato/renovate-config"
  ],
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/vendor/**",
    "**/examples/**",
    "**/__tests__/**",
    "**/tests/**",
    "**/__fixtures__/**"
  ],
  "ignoreDeps": [
    "go"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "golang.org/x/tools"
      ],
      "allowedVersions": "<0.2.0"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  }
}
